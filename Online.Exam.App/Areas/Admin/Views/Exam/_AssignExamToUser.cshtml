@model UserExam

<div class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"> Kullanıcıya Sınav Ata </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="İptal">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Update" id="exam-user-form">
                    <input asp-for="ExamId" type="hidden" value="@ViewBag.ExamId" />
                    <div class="form-group mb-2">
                        <label> Kullanıcı Seçiniz </label>
                        <select id="users" asp-for="UserId" asp-items="@ViewBag.Users" class="form-control">
                        </select>
                    </div>
                    <div class="form-group">
                        <label> Başlangıç Tarihi </label>
                        <input type="datetime-local" class="form-control" asp-for="StartDate" />
                    </div>
                    <div class="form-group">
                        <label> Bitiş Tarihi Tarihi </label>
                        <input type="datetime-local" class="form-control" asp-for="EndDate" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger w-100" data-dismiss="modal"><span class="fas fa-times"></span> İptal</button>
                <button type="button" id="btnSet" class="btn btn-success w-100"><span class="fas fa-save"></span> Kaydet</button>
            </div>
        </div>
    </div>
</div>

