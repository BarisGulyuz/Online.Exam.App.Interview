@model List<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="card mt-5">
    <div class="card-header">
        <button id="add-category" class="btn btn-primary"> <i class="fas fa-plus"></i> Yeni Kategori Ekle</button>
    </div>
    <div class="card-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Kategori Adı</th>
                    <th>Sınav Sayısı</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td><span class="badge badge-success"> @item.Exams.Count()</span></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

